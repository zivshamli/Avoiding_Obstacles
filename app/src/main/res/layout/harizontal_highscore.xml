<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/line_CARD_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/score_line"
        android:layout_marginVertical="5dp"
        android:elevation="@dimen/line_elevation"
        app:cardCornerRadius="@dimen/line_corner_radius"
        app:cardElevation="@dimen/line_elevation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_menu_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_400">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/score_LBL_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/size_table"
                android:textColor="@color/green_A400"
                android:background="@drawable/background_menu_gradient"
                tools:text="Name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/score_LBL_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/size_table"
                android:textColor="@color/green_A400"
                android:background="@drawable/background_menu_gradient"
                tools:text="Score" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>