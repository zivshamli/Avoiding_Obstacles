    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_player_image_height"
        android:layout_above="@id/main_BTN_Layout"
        android:layout_marginLeft="@dimen/figures_hor_lay_margin_left"
        android:layout_marginRight="@dimen/figures_hor_lay_margin_right"
        android:layout_marginBottom="@dimen/player_layout_bottom_margin"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_Player_IMG_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
