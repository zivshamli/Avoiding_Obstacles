    <RelativeLayout
    android:id="@+id/main_BTN_Layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="@dimen/button_BTN_margin"
    android:layout_marginBottom="@dimen/button_margin"
    android:orientation="horizontal">

<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_FAB_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="L"
        app:iconSize="@dimen/BTN_height"
        android:backgroundTint="@color/green_A400"
        app:icon="@drawable/baseline_arrow_circle_left_24"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/btn_side_margin"

    />


<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_FAB_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="R"
        app:iconSize="@dimen/BTN_height"
        android:backgroundTint="@color/green_A400"
        app:icon="@drawable/baseline_arrow_circle_right_24"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        />



    </RelativeLayout>




</RelativeLayout>